<link rel="stylesheet" href="style.css">


<div class="card text-center">
  <div class="card-header"> LOG IN </div>

  <!-- <div class="container card-body"> -->
  <div class="card" id="loginSection">
    <form class="form login-form" action="/login" method="POST">

      <div class="form-group">
        <label for="email-login">Email:</label>
        <input class="form-input" name="email" type="text" id="email-login" />
      </div>

      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input" name="password" type="password" id="password-login" />
      </div>

      <div class="form-group">
        <button class="btn btn-success" name="loginID" type="submit">Login</button>
        <button class="btn btn-success" name="registerID" type="submit">Register</button>
      </div>
    </form>

  </div>
  <!-- </div> -->
</div>

